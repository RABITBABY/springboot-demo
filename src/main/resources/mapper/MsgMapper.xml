<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.MsgMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.example.entity.Msg">
		<id column="id" property="id" />
		<result column="msg" property="msg" />
		<result column="come_from" property="comeFrom" />
		<result column="create_time" property="createTime" />
	</resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, msg, come_from AS comeFrom, create_time AS createTime
    </sql>

	<select id="selectPageWithParam" resultType="com.example.entity.Msg" parameterType="com.example.entity.Msg">
		select
        <include refid="Base_Column_List"/>
		from msg
	</select>

	<select id="selectOneByObj" resultType="com.example.entity.Msg" parameterType="java.lang.Long">
		select
        <include refid="Base_Column_List"/>
		from msg
		<where>
			id = #{id, jdbcType=VARCHAR}
		</where>
	</select>
</mapper>
